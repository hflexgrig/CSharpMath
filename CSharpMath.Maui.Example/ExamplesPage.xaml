<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:math="clr-namespace:CSharpMath.Maui;assembly=CSharpMath.Maui"
             xmlns:local="clr-namespace:CSharpMath.Maui.Example"
             x:Class="CSharpMath.Maui.Example.ExamplesPage"
             Title="Examples">
    <Grid RowDefinitions="Auto,*">
        <ScrollView>
            <HorizontalStackLayout>
                <Picker x:Name="alignment" Title="Alignment" />
                <Picker x:Name="paintStyle" Title="Paint Style" />
                <Picker x:Name="lineStyle" Title="Line Style" />
                <Label Text="Draw glyph boxes"/>
                <Switch x:Name="drawGlyphBoxes"/>
                <Label Text="Highlight color"/>
                <Switch x:Name="highlight"/>
            </HorizontalStackLayout>
        </ScrollView>
        <ScrollView Grid.Row="1">
            <VerticalStackLayout x:Name="Stack"/>
        </ScrollView>
    </Grid>
</ContentPage>
